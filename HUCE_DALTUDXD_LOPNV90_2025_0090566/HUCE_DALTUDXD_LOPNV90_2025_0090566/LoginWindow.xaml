<Window x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="450" Width="850"
        Icon="/Assets/Icons/icon_app.jpg">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Hình ảnh -->
        <Border Grid.Column="0" Background="White">
            <Image Source="/Assets/Images/login_image.jpg" 
                   Width="332" Height="434" 
                   Stretch="UniformToFill"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Form đăng nhập -->
        <Border Grid.Column="1" Background="#f4f6f9" Padding="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="275">

                <TextBlock Text="ĐĂNG NHẬP" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#3b82f6" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Tên đăng nhập:" Margin="15,0,0,5"/>
                <TextBox x:Name="txtUsername" Height="20" Margin="5,0,0,15" Width="250"/>

                <TextBlock Text="Mật khẩu:" Margin="15,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="20" Margin="5,0,0,25" Width="250"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnLogin" Content="Đăng nhập" Width="100" Height="35" 
                            Background="#3b82f6" Foreground="White" Click="btnLogin_Click"/>
                    <Button x:Name="btnExit" Content="Thoát" Width="80" Height="35" 
                            Margin="5" Background="Gray" Foreground="White" Click="btnExit_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
