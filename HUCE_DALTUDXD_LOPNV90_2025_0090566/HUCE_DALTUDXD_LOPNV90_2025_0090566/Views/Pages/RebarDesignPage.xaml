<Page x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.Views.Pages.RebarDesignPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566.Views.Pages"
      mc:Ignorable="d" 
      Title="Thiết kế chi tiết"
      d:DesignHeight="700" d:DesignWidth="1280"
      Background="White">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="CHI TIẾT &amp; ĐIỀU CHỈNH THÉP" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

            <GroupBox Header="Thông tin cột" Margin="0,0,0,15" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tên cột:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding DesignColumn.ColumnName}" Grid.Column="1" FontWeight="Bold"/>

                    <TextBlock Text="Tiết diện (bxh):" Grid.Row="1" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,5,0,0">
                        <Run Text="{Binding DesignColumn.B}"/> <Run Text="x"/> <Run Text="{Binding DesignColumn.H}"/>
                    </TextBlock>

                    <TextBlock Text="As Yêu cầu:" Grid.Row="2" Margin="0,5,0,0" Foreground="Red"/>
                    <TextBlock Text="{Binding DesignColumn.As_Required, StringFormat='{}{0:N0} mm²'}" Grid.Row="2" Grid.Column="1" Margin="0,5,0,0" Foreground="Red" FontWeight="Bold"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Điều chỉnh cốt thép" Margin="0,0,0,15" Padding="10" BorderBrush="#2980B9" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Số lượng thanh:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditBarQuantity, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputTextBoxStyle}" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>

                    <TextBlock Text="Đường kính (mm):" Margin="0,10,0,5"/>
                    <ComboBox ItemsSource="{Binding DiameterOptions}" 
                              SelectedItem="{Binding EditBarDiameter}"
                              Height="35" FontSize="16" FontWeight="Bold" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Diện tích thép cung cấp (As chọn):" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding DesignColumn.As_Provided, StringFormat=N0, Mode=OneWay}" 
                             IsReadOnly="True" Background="#EFEFEF" Height="35" FontSize="16" FontWeight="Bold" VerticalContentAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <Border Background="#F9F9F9" BorderBrush="Gray" BorderThickness="1" Padding="15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="TRẠNG THÁI KIỂM TRA:" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CheckStatus}" 
                               Foreground="{Binding StatusColor}"
                               FontSize="16" FontWeight="ExtraBold" 
                               HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center"/>

                    <TextBlock Text="{Binding DesignColumn.Mu_Percentage, StringFormat='Hàm lượng cốt thép: {0:N2}%'}" 
                               HorizontalAlignment="Center" Margin="0,10,0,0" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <Button Content="Quay lại bảng kết quả" Click="BtnBack_Click" Margin="0,20,0,0" Height="40" Background="Gray" Style="{StaticResource MainButtonStyle}"/>
        </StackPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="MẶT CẮT NGANG TIẾT DIỆN" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#7F8C8D"/>

            <Border Grid.Row="1" BorderBrush="#34495E" BorderThickness="2" Margin="0,10,0,0" Background="#FCFCFC" CornerRadius="4">
                <Canvas x:Name="DetailCanvas" Margin="20" Background="Transparent"/>
            </Border>
        </Grid>
    </Grid>
</Page>
