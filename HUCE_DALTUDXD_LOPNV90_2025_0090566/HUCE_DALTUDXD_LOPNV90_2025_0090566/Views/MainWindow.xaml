<Window x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566.Views"
        mc:Ignorable="d"
        Title="PHẦN MỀM THIẾT KẾ CỘT BTCT" 
        WindowStartupLocation="CenterScreen"
        Height="750" Width="1280"
        Icon="/Assets/Icons/icon_app.jpg">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Cột Menu -->
            <ColumnDefinition Width="*"/>
            <!-- Cột Nội dung -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR MENU -->
        <Border Grid.Column="0" Background="#2C3E50" BorderBrush="Gray" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <!-- Tiêu đề Menu -->
                <TextBlock Text="MENU CHÍNH"
                           Foreground="White"
                           FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <!-- Các nút bấm (Sử dụng Style MainButtonStyle từ App.xaml) -->
                <!-- Margin: Trái, Trên, Phải, Dưới -->

                <Button Content="1. Nhập dữ liệu cột" 
                        Style="{StaticResource MainButtonStyle}"
                        Margin="0,0,0,10"
                        Click="BtnInput_Click"/>

                <Button Content="2. Kết quả sơ bộ" 
                        Style="{StaticResource MainButtonStyle}"
                        Margin="0,0,0,10"
                        Click="BtnResult_Click"/>

                <Button Content="3. Thiết kế cốt thép" 
                        Style="{StaticResource MainButtonStyle}"
                        Margin="0,0,0,10"
                        Click="BtnRebar_Click"/>

                <Button Content="4. Báo cáo cuối" 
                        Style="{StaticResource MainButtonStyle}"
                        Margin="0,0,0,10"
                        Click="BtnFinal_Click"/>

                <!-- Dòng kẻ ngang phân cách -->
                <Separator Background="Gray" Margin="0,20,0,20"/>

                <Button Content="Thoát chương trình" 
                        Style="{StaticResource MainButtonStyle}"
                        Background="#C0392B" 
                        Click="BtnExit_Click"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT FRAME -->
        <!-- ShowsNavigationUI="False" để ẩn thanh điều hướng mặc định của Frame -->
        <Frame x:Name="MainFrame" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"
               Background="White"/>
    </Grid>
</Window>
