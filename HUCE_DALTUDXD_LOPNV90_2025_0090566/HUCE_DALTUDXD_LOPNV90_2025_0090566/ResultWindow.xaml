<Window x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566"
        mc:Ignorable="d"
         Title="Kết quả tính toán cột BTCT"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Icons/icon_app.jpg">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="KẾT QUẢ TÍNH TOÁN" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="20" Orientation="Vertical" >
            <TextBlock Text="Phân loại cột:" FontWeight="Bold"/>
            <TextBlock x:Name="txtLoaiCot" Text="Cột nén lệch tâm nhỏ (demo)"/>

            <Separator Margin="0,10,0,10"/>

            <TextBlock Text="Tính toán cơ bản:" FontWeight="Bold"/>
            <TextBlock x:Name="txtTinhToanCoBan" 
                       Text="λ = 60, φ = 0.9 (demo)"/>

            <Separator Margin="0,10,0,10"/>

            <TextBlock Text="Khả năng chịu lực:" FontWeight="Bold"/>
            <TextBlock x:Name="txtKhaNang" 
                       Text="Nc = 1200 kN, Mcx = 50 kNm, Mcy = 45 kNm (demo)"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnBack" Content="Trở lại" Width="100" Margin="10" Click="btnBack_Click"/>
            <Button x:Name="btnNext" Content="Tiếp tục" Width="100" Margin="10" Click="btnNext_Click"/>
        </StackPanel>
    </Grid>
</Window>
