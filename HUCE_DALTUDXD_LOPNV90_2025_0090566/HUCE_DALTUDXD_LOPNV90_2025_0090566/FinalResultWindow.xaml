<Window x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.FinalResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566"
        mc:Ignorable="d"
        Title="Kết quả cuối cùng"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Icons/icon_app.jpg">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="KẾT QUẢ TÍNH TOÁN CUỐI CÙNG" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Nội dung chính -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Bảng kết quả -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Bảng kết quả tính toán:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="txtKQ1" Text="As yêu cầu = 1200 mm² (demo)" Margin="0,5"/>
                <TextBlock x:Name="txtKQ2" Text="As bố trí = 1256 mm² (demo)" Margin="0,5"/>
                <TextBlock x:Name="txtKQ3" Text="Kiểm tra điều kiện: ĐẠT (demo)" Margin="0,5"/>
            </StackPanel>

            <!-- Hình minh hoạ -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Minh hoạ tiết diện bố trí cốt thép" FontWeight="Bold" Margin="0,0,0,10"/>
                <Border BorderBrush="Gray" BorderThickness="1" Width="300" Height="300" Background="White" HorizontalAlignment="Center">
                    <Image x:Name="imgTietDien" Stretch="Uniform"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Nút điều khiển -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnBackInput" Content="Quay lại nhập dữ liệu" Width="180" Margin="10" Click="btnBackInput_Click"/>
            <Button x:Name="btnClose" Content="Kết thúc" Width="120" Margin="10" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
