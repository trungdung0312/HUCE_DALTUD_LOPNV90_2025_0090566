<Window x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.FinalResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566"
        mc:Ignorable="d"
        Title="Kết quả cuối cùng"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Icons/icon_app.jpg">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="KẾT QUẢ TÍNH TOÁN CUỐI CÙNG" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Nội dung chính -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Bảng kết quả -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Bảng kết quả tính toán:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="txtKQ1" Text="As yêu cầu = 1200 mm² (demo)" Margin="0,5"/>
                <TextBlock x:Name="txtKQ2" Text="As bố trí = 1256 mm² (demo)" Margin="0,5"/>
                <TextBlock x:Name="txtKQ3" Text="Kiểm tra điều kiện: ĐẠT (demo)" Margin="0,5"/>
                <StackPanel  Margin="10">
                    <TextBlock Text="Chiều rộng X (mm)"/>
                    <TextBox x:Name="txtWidth" Text="400"/>

                    <TextBlock Text="Chiều cao Y (mm)" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtHeight" Text="500"/>

                    <TextBlock Text="Số lượng thép mỗi cạnh" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtBars" Text="2"/>

                    <TextBlock Text="Đường kính thép (mm)" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtBarDia" Text="16"/>

                    <Button Content="Vẽ lại" Margin="0,20,0,0" Click="Redraw_Click"/>
                </StackPanel>

           
            </StackPanel>

            <!-- Hình minh hoạ -->
            <!-- Panel nhập dữ liệu -->
            <!-- Panel vẽ mặt cắt – nằm trong Viewbox để auto-scale -->
            <Viewbox Grid.Column="1" Stretch="Uniform">
                <Canvas x:Name="DrawArea" Width="600" Height="600" Background="White"/>
            </Viewbox>


        </Grid>

        <!-- Nút điều khiển -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnBackInput" Content="Quay lại nhập dữ liệu" Width="180" Margin="10" Click="btnBackInput_Click"/>
            <Button x:Name="btnClose" Content="Kết thúc" Width="120" Margin="10" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
