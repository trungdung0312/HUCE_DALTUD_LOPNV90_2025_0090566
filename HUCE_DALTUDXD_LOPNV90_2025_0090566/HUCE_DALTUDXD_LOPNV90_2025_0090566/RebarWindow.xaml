<Window x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.RebarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566"
        mc:Ignorable="d"
        Title="Bố trí và kiểm tra cốt thép"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Icons/icon_app.jpg">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="BỐ TRÍ VÀ KIỂM TRA CỐT THÉP" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Nhập lựa chọn -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20">
            <TextBlock Text="Chọn số lượng thanh dọc:" FontWeight="Bold"/>
            <ComboBox x:Name="cbSoThanh" Width="120" Margin="0,5,0,15">
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="12"/>
            </ComboBox>

            <Button x:Name="btnCheck" Content="Kiểm tra" Width="120" Margin="0,0,0,15" Click="btnCheck_Click"/>

            <GroupBox Header="Kết quả kiểm tra" Margin="0,10,0,10">
                <StackPanel Margin="10">
                    <TextBlock x:Name="txtKiemTraAs" Text="As yêu cầu: -- mm²"/>
                    <TextBlock x:Name="txtChonThep" Text="Đã chọn: 6Ø20 (demo)"/>
                    <TextBlock x:Name="txtCheckCover" Text="Kiểm tra lớp bảo vệ: Đạt (demo)"/>
                    <TextBlock x:Name="txtCheckSpacing" Text="Kiểm tra khoảng cách: Đạt (demo)"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Nút điều hướng -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnBack" Content="Trở lại" Width="100" Margin="10" Click="btnBack_Click"/>
            <Button x:Name="btnNext" Content="Tiếp tục" Width="100" Margin="10" Click="btnNext_Click"/>
        </StackPanel>
    </Grid>
</Window>
