<Window x:Class="TinhtoancotBTCT.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập - Tính Toán Cột BTCT"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="450" Width="400"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Grid>
        <!-- Ảnh nền -->
        <Image Source="/Resources/Image/NEN.jpg" Stretch="Fill"/>

        <!-- Khung form (MouseDown để kéo cửa sổ) -->
        <Border Background="#CCFFFFFF" 
                CornerRadius="12"
                Width="360" Height="360"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="20"
                MouseDown="Border_MouseDown">

            <Grid>
                <!-- Nút đóng (top-right) -->
                <Button Content="✕" Width="28" Height="28" 
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Click="Close_Click"
                        Padding="0" Margin="0" />

                <StackPanel Margin="0,20,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Đăng nhập hệ thống"
                               FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,16"/>

                    <TextBlock Text="Tên đăng nhập:" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtUser" Height="34" Margin="0,6,0,12" Padding="8"/>

                    <TextBlock Text="Mật khẩu:" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="txtPass" Height="34" Margin="0,6,0,18" Padding="8"/>

                    <Button Content="Đăng nhập" Height="38" Click="Login_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
