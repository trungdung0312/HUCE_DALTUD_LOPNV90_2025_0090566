<Page x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.Views.Pages.RebarDesignPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566.Views.Pages"
      mc:Ignorable="d" 
      Title="Thiết kế chi tiết"
      d:DesignHeight="768" d:DesignWidth="1366"
      Background="White">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#2C3E50"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CenteredTextBox" TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="520"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <StackPanel>
                <TextBlock Text="BỐ TRÍ CỐT THÉP CỘT" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                <GroupBox Header="1. THÔNG TIN CỘT">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Tên cấu kiện:" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DesignColumn.ColumnName}" FontWeight="Bold" FontSize="14" Foreground="#C0392B"/>

                        <TextBlock Grid.Row="1" Text="Tiết diện (bxh):" Style="{StaticResource HeaderStyle}" Margin="0,5,5,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,5,0,0">
                            <Run Text="{Binding DesignColumn.B}" FontWeight="SemiBold"/> <Run Text="x"/> <Run Text="{Binding DesignColumn.H}" FontWeight="SemiBold"/> <Run Text=" (mm)"/>
                        </TextBlock>

                        <TextBlock Grid.Row="2" Text="Diện tích As yêu cầu:" Style="{StaticResource HeaderStyle}" Margin="0,5,5,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,5,0,0">
                            <Run Text="{Binding DesignColumn.As_Required, StringFormat='{}{0:N1}'}" Foreground="Red" FontWeight="Bold" FontSize="16"/>
                            <Run Text=" mm²" Foreground="Gray" FontSize="12"/>
                        </TextBlock>
                    </Grid>
                </GroupBox>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0" Header="2. PHƯƠNG X (Trục b)" BorderBrush="#3498DB">
                        <Grid DataContext="{Binding SteelX}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Lớp ngoài:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Q1, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CenteredTextBox}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Φ" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                            <ComboBox Grid.Row="1" Grid.Column="2" ItemsSource="{Binding DiameterList}" SelectedItem="{Binding D1}" Height="30" VerticalContentAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.ColumnSpan="3" Text="Lớp trong (nếu có):" FontWeight="SemiBold" FontSize="12" Margin="0,10,0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding Q2, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CenteredTextBox}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Φ" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                            <ComboBox Grid.Row="3" Grid.Column="2" ItemsSource="{Binding DiameterList}" SelectedItem="{Binding D2}" Height="30" VerticalContentAlignment="Center"/>

                            <Border Grid.Row="4" Grid.ColumnSpan="3" BorderBrush="#EEEEEE" BorderThickness="0,1,0,0" Margin="0,10,0,0" Padding="0,5,0,0">
                                <TextBlock Text="{Binding Area, StringFormat='As.x = {0:N1} mm²'}" HorizontalAlignment="Right" Foreground="#2980B9" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Column="2" Header="3. PHƯƠNG Y (Trục h)" BorderBrush="#27AE60">
                        <Grid DataContext="{Binding SteelY}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Lớp ngoài:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Q1, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CenteredTextBox}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Φ" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                            <ComboBox Grid.Row="1" Grid.Column="2" ItemsSource="{Binding DiameterList}" SelectedItem="{Binding D1}" Height="30" VerticalContentAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.ColumnSpan="3" Text="Lớp trong (nếu có):" FontWeight="SemiBold" FontSize="12" Margin="0,10,0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding Q2, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CenteredTextBox}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Φ" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                            <ComboBox Grid.Row="3" Grid.Column="2" ItemsSource="{Binding DiameterList}" SelectedItem="{Binding D2}" Height="30" VerticalContentAlignment="Center"/>

                            <Border Grid.Row="4" Grid.ColumnSpan="3" BorderBrush="#EEEEEE" BorderThickness="0,1,0,0" Margin="0,10,0,0" Padding="0,5,0,0">
                                <TextBlock Text="{Binding Area, StringFormat='As.y = {0:N1} mm²'}" HorizontalAlignment="Right" Foreground="#27AE60" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </GroupBox>
                </Grid>

                <Border Background="#F9F9F9" BorderBrush="#95A5A6" BorderThickness="1" Padding="15" CornerRadius="4" Margin="0,5,0,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="TỔNG As CHỌN:" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding DesignColumn.As_Provided, StringFormat='{}{0:N1}'}" FontWeight="ExtraBold" FontSize="20" Foreground="#2C3E50"/>
                                <TextBlock Text=" mm²" VerticalAlignment="Bottom" Margin="2,0,0,3" Foreground="Gray"/>
                            </StackPanel>
                        </Grid>

                        <ProgressBar Height="5" Value="{Binding DesignColumn.Mu_Percentage}" Maximum="4" Foreground="#27AE60" Background="#E0E0E0" BorderThickness="0"/>
                        <TextBlock Text="{Binding DesignColumn.Mu_Percentage, StringFormat='Hàm lượng cốt thép μ = {0:N2}%'}" HorizontalAlignment="Center" Margin="0,5,0,10" FontStyle="Italic" FontSize="12"/>
                        <Separator/>
                        <TextBlock Text="{Binding CheckStatus}" Foreground="{Binding StatusColor}" FontSize="18" FontWeight="ExtraBold" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Grid Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="LƯU PHƯƠNG ÁN" Command="{Binding SaveCommand}" Height="45" Cursor="Hand" Style="{StaticResource MainButtonStyle}" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
                    <Button Grid.Column="2" Content="QUAY LẠI BẢNG KẾT QUẢ" Click="BtnBack_Click" Width="200" Height="45" Cursor="Hand" Style="{StaticResource MainButtonStyle}" Background="#7F8C8D" Foreground="White" FontWeight="SemiBold"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="MẶT CẮT NGANG TIẾT DIỆN" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#7F8C8D" FontSize="14"/>
            <TextBlock Grid.Row="0" Text="(Minh họa bố trí)" HorizontalAlignment="Center" Margin="0,20,0,0" FontStyle="Italic" FontSize="11" Foreground="Silver" VerticalAlignment="Bottom"/>
            <Border Grid.Row="1" BorderBrush="#34495E" BorderThickness="2" Margin="0,5,0,0" Background="#FCFCFC">
                <Canvas x:Name="DetailCanvas" Margin="20" Background="Transparent" SizeChanged="DetailCanvas_SizeChanged"/>
            </Border>
        </Grid>
    </Grid>
</Page>
