<Window x:Class="LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập"
        WindowStartupLocation="CenterScreen"
        Width="450" Height="300"
        ResizeMode="NoResize">

    <!-- Nền là ảnh -->
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\DELL\b.jfif" Stretch="Fill"/>

    </Window.Background>

    <Grid>
        <!-- Panel mờ để hiển thị form -->
        <Border Background="#66000000" 
                CornerRadius="10" 
                Padding="20" 
                Width="300" Height="200"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel>
                <TextBlock Text="Đăng nhập" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBox x:Name="txtUsername" 
                         Text="Tên đăng nhập"
                         Margin="0,0,0,10" 
                         Padding="8"/>

                <PasswordBox x:Name="txtPassword" 
                             Margin="0,0,0,15" 
                             Padding="8"/>

                <Button Content="Đăng nhập" 
                        Background="#2196F3" 
                        Foreground="White" 
                        Padding="8"
                        FontWeight="Bold"
                        Click="Login_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
