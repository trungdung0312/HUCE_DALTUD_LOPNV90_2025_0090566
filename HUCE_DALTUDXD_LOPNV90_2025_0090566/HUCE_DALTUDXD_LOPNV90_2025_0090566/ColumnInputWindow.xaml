<Window x:Class="HUCE_DALTUDXD_LOPNV90_2025_0090566.ColumnInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUCE_DALTUDXD_LOPNV90_2025_0090566"
        mc:Ignorable="d"
        Title="Nhập dữ liệu cột BTCT"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Icons/icon_app.jpg"
        Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Form nhập liệu -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="N (kN):"/>
            <TextBox x:Name="txtN"/>

            <TextBlock Text="Mx (kNm):"/>
            <TextBox x:Name="txtMx"/>

            <TextBlock Text="My (kNm):"/>
            <TextBox x:Name="txtMy"/>

            <TextBlock Text="Chiều rộng b (mm):"/>
            <TextBox x:Name="txtB"/>

            <TextBlock Text="Chiều cao h (mm):"/>
            <TextBox x:Name="txtH"/>

            <TextBlock Text="Chiều dài cột l (mm):"/>
            <TextBox x:Name="txtL"/>

            <TextBlock Text="Hệ số điều kiện liên kết ψ:"/>
            <ComboBox x:Name="cbPsi" Width="120">
                <ComboBoxItem Content="0.5"/>
                <ComboBoxItem Content="0.7"/>
                <ComboBoxItem Content="1.0"/>
            </ComboBox>

            <TextBlock Text="Rb (MPa):"/>
            <ComboBox x:Name="cbRb" Width="120">
                <ComboBoxItem Content="11.5"/>
                <ComboBoxItem Content="14.5"/>
                <ComboBoxItem Content="17"/>
            </ComboBox>

            <TextBlock Text="Rs (MPa):"/>
            <ComboBox x:Name="cbRs" Width="120">
                <ComboBoxItem Content="280"/>
                <ComboBoxItem Content="365"/>
                <ComboBoxItem Content="500"/>
            </ComboBox>

            <TextBlock Text="Đường kính thép ϕ (mm):"/>
            <TextBox x:Name="txtPhi"/>

            <TextBlock Text="Lớp bê tông bảo vệ (mm):"/>
            <TextBox x:Name="txtCover"/>

            <TextBlock Text="Khoảng cách cốt thép tối thiểu (mm):"/>
            <TextBox x:Name="txtSpacing"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="btnAdd" Content="Thêm" Width="70" Margin="5" Click="btnAdd_Click"/>
                <Button x:Name="btnUpdate" Content="Sửa" Width="70" Margin="5" Click="btnUpdate_Click"/>
                <Button x:Name="btnDelete" Content="Xóa" Width="70" Margin="5" Click="btnDelete_Click"/>
                <Button x:Name="btnTinhToan" Content="Tính toán" Width="90" Margin="5" Click="btnTinhToan_Click"
                         Background="#3b82f6" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Bảng hiển thị dữ liệu đã nhập -->
        <DataGrid x:Name="dataGrid" Grid.Column="1" Margin="10"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  SelectionMode="Single" SelectionChanged="dataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="N (kN)" Binding="{Binding N}" Width="45"/>
                <DataGridTextColumn Header="Mx (kNm)" Binding="{Binding Mx}" Width="61"/>
                <DataGridTextColumn Header="My (kNm)" Binding="{Binding My}" Width="62"/>
                <DataGridTextColumn Header="b (mm)" Binding="{Binding B}" Width="48"/>
                <DataGridTextColumn Header="h (mm)" Binding="{Binding H}" Width="48"/>
                <DataGridTextColumn Header="l (mm)" Binding="{Binding L}" Width="44"/>
                <DataGridTextColumn Header="ψ" Binding="{Binding Psi}" Width="30"/>
                <DataGridTextColumn Header="Rb" Binding="{Binding Rb}" Width="30"/>
                <DataGridTextColumn Header="Rs" Binding="{Binding Rs}" Width="35"/>
                <DataGridTextColumn Header="ϕ (mm)" Binding="{Binding Phi}" Width="48"/>
                <DataGridTextColumn Header="Cover (mm)" Binding="{Binding Cover}" Width="72"/>
                <DataGridTextColumn Header="Spacing (mm)" Binding="{Binding Spacing}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
